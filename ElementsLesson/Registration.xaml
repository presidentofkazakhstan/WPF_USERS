<Window x:Class="ElementsLesson.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElementsLesson"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800" Background="#FFAAAAAA">
    <Grid>
        <materialDesign:Card Margin="0,0,0,0" VerticalAlignment="Bottom">
            
            <StackPanel Orientation="Vertical" Height="217" VerticalAlignment="Bottom" Margin="129,0,129,105">
            <TextBlock TextAlignment="Center" Text="Login: " Height="27"/>
            <TextBox x:Name="loginTextBox" Margin="0 0 0 10"/>

            <TextBlock TextAlignment="Center" Text="Password: " Margin="0 0 0 0"/>
            <PasswordBox x:Name="passwordBox" Margin="0 0 0 10"/>


            <TextBlock TextAlignment="Center" Text="Repeat Password: " Margin="0 0 0 0"/>
            <PasswordBox x:Name="repeatPasswordBox" Margin="0 0 0 20"/>


            <Button x:Name="registrationButton" Content="Registration" Click="registratioButtonClick"/>
        </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
